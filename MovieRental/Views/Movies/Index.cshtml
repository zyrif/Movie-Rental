@model MovieRental.ViewModels.MovieListViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movies</h2>

@if (@Model.Movies.Count == 0)
{
    <h5>No Movie in the Database </h5>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th> Movies </th>
            <th> Genre </th>
            <th> Release Date </th>
            <th> Number in Stock </th>
        </tr>
        </thead>

        <tbody>
        @foreach (var movie in @Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Details", "Movies", new {id=@movie.Id}, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.ReleaseDate.ToString("dd MMM yyyy")</td>
                <td>@movie.NumberInStock</td>
            </tr>
        }
        </tbody>
    </table>
    @Html.ActionLink("Add Movie", "Add", "Movies", new {@class = "btn btn-primary"})
}